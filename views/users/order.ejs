<% layout('layouts/boilerplate') %> 


<div class="col d-flex justify-content-center">
    <% if(currentUser){ %> 
    <form action="/books/<%=book._id%>/order" method="post" novalidate class="validated-form">
    <div class="card" style="width: 30rem;">
        <div class="card-header">
          Order Details:
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><label for="title">Title:</label>
            <input type="text" value= "<%= book.title  %>" name="book[title]" required></li>
          <li class="list-group-item"> <label for="author">Author:</label>
            <input type="text" value= "<%= book.author%>" name="book[author]" required> </li>
          <li class="list-group-item"><label for="genre">Genre:</label>
            <input type="text" value="<%= book.genre%>" name="book[genre]" required></li>
            <li class="list-group-item"> <label for="description">Description:</label>
                <input type="text" value="<%= book.description%>" name="book[description]" required></li>
            <li class="list-group-item"> <label for="price">MRP:&#x20b9;</label>
                <input type="text" value="<%= book.price%>" name="book[price]" required> </li>
                <li class="list-group-item"> <label for="address">Delivery Address:</label>
                    <input type="text" value="<%= user.address%>" required> </li>
                    <li class="list-group-item"> <label for="contact">Contact no.:</label>
                        <input type="text" value="<%= user.contact%>" required> </li>
               
                    <li class="list-group-item"><label for="amout">Amount:&#x20b9;</label>
                   <%const random1000=Math.floor(Math.random()*1000)%>
                   <%const price =Math.floor(Math.random()*20)+10 %> 
                   <%= price %> 
                </li>
            
        </ul>
        <div class="col-md-12 text-center md-3">
          
            <button class="btn btn-sm btn-success my-2">Continue</button>
            
    
        </div>
      </div>
    </form>
    <% } %> 
    </div>