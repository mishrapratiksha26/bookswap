<li>Books by :</li>
<li class="list-group-item">
    <h4>Books posted by you:</h4>
   
          <div class="container">
            <div class="row gy-3 my-3" >
  <% for(let book of books){ %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100" >
    <!-- <div class="card" mb-3> -->
        <div id="bookCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% book.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-1rem" alt="">
                </div>
                <% }) %>

            </div>
            <% if(book.images.length > 1) {%>
            <a class="carousel-control-prev" href="#bookCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#bookCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
            <h5 class="card-title">Title: <%= book.title %> </h5></li>
            <li class="list-group-item"><p class="card-text">Description:<%= book.description%></p></li>
          </div>
        
          <div class="card-body ml-auto">
            <a href="/books/<%=book._id %>" class="card-link btn btn-info mr-auto">View</a>
          
          </div>
        </div>
        </div>
      
       <% } %>   
       </div>
       </div>
      
 </li>